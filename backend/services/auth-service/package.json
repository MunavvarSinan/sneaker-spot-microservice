{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/src/index.js",
    "dev": "pnpm build && pnpm start",
    "build": "rimraf dist && swc src -d dist",
    "db:generate": "prisma generate",
    "db:console": "docker compose -f ../../../docker/docker-compose.yml run auth-database psql -h auth-db -U postgres -d auth",
    "db:migrate": "prisma migrate dev --preview-feature",
    "docker:db:generate": "docker compose -f ../../../docker/docker-compose.yml run auth pnpm db:generate",
    "docker:db:migrate": "docker compose -f ../../../docker/docker-compose.yml run auth pnpm db:migrate",
    "docker:prisma:studio": "docker compose -f ../../../docker/docker-compose.yml run auth pnpm prisma studio",
    "watch": "nodemon"
  },
